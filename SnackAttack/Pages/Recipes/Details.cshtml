@page "{id:int?}"
@model SnackAttack.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Ingredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Directions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Directions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.TotalEstimatedCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.TotalEstimatedCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Category)
        </dd>



        <dt class="col-sm-2">
            Reviews
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Comment</th>
                        <th>Rating</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model.Recipe.Reviews)
                    {
                        <tr>
                            <td>@review.SnackAttackUserID</td>
                            <td>@review.Comment</td>
                            <td>@review.Rating</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>

        <dt class="col-sm-2">
            Saved By
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>User ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var favouriteRecipe in Model.Recipe.FavouriteRecipes)
                    {
                        <tr>
                            <td>@favouriteRecipe.SnackAttackUserID</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>


        <dt class="col-sm-2">
            Included In Meal Plan
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Meal Plan ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mealPlan in Model.Recipe.MealPlans)
                    {
                        <tr>
                            <td>@mealPlan.ID</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>

    </dl>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
