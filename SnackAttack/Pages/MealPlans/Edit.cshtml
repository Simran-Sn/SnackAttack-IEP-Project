@page "{id:int?}"
@model SnackAttack.Pages.MealPlans.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MealPlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MealPlan.ID" />
            <div class="form-group">
                <label asp-for="MealPlan.Date" class="control-label"></label>
                <input asp-for="MealPlan.Date" class="form-control" />
                <span asp-validation-for="MealPlan.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealPlan.RecipeID" class="control-label"></label>
                <select asp-for="MealPlan.RecipeID" class="form-control" asp-items="ViewBag.RecipeName"></select>
                <span asp-validation-for="MealPlan.RecipeID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MealPlan.SnackAttackUserID" class="control-label"></label>
                <select asp-for="MealPlan.SnackAttackUserID" class="form-control" asp-items="ViewBag.SnackAttackUserID"></select>
                <span asp-validation-for="MealPlan.SnackAttackUserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
