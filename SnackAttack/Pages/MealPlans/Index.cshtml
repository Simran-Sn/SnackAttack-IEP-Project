@page
@model SnackAttack.Pages.MealPlans.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Meal Plan</h1>
<h2> Save recipes that you want to cook for later</h2>
<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="col-sm-4">
  <img src="~/images/SampleMealPlan.png"  alt="MealPlanCalendar" width="1200" height="600">
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].RecipeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].Recipe.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MealPlan) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.ID)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipe.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
