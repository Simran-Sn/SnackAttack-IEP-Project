@page "{id:int?}"
@model SnackAttack.Pages.SnackAttackUsers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SnackAttackUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SnackAttackUser.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SnackAttackUser.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SnackAttackUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SnackAttackUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SnackAttackUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SnackAttackUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SnackAttackUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SnackAttackUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SnackAttackUser.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SnackAttackUser.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SnackAttackUser.IsPremium)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SnackAttackUser.IsPremium)
        </dd>

        <dt class="col-sm-2"> Created Recipes</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Recipe ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model.SnackAttackUser.Recipes)
                    {
                        <tr>
                            <td>@recipe.ID</td>
                            <td>@recipe.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>

        <dt class="col-sm-2"> Created Reviews</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Rating</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model.SnackAttackUser.Reviews)
                    {
                        <tr>
                            <td>@review.ID</td>
                            <td>@review.Rating</td>
                            <td>@review.Comment</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>

        <dt class="col-sm-2">Favourite Recipes</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model.SnackAttackUser.FavouriteRecipes)
                    {
                        <tr>
                            <td>@recipe.ID</td>
                            <td>@recipe.Recipe.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>

        <dt class="col-sm-2">Meal Plan Recipes</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model.SnackAttackUser.MealPlans)
                    {
                        <tr>
                            <td>@recipe.ID</td>
                            <td>@recipe.Recipe.Name</td>
                            <td>@recipe.Date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.SnackAttackUser?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
