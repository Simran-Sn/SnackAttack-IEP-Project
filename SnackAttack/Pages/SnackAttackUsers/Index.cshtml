@page
@model SnackAttack.Pages.SnackAttackUsers.IndexModel

@{
    ViewData["Title"] = "Index";
}

@using System.Security.Claims


@{
    var userIdClaim = User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier);
    var userId = userIdClaim?.Value;
}

@if (userId == "0de45bb1-5a74-46c1-a762-83a4b8da8860")

{
    <h1>Users</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SnackAttackUser[0].ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SnackAttackUser[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SnackAttackUser[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SnackAttackUser[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SnackAttackUser[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SnackAttackUser[0].IsPremium)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SnackAttackUser)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPremium)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1>Access Denied</h1>
    <p>You are not authorized to view this page.</p>
}